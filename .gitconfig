[core]
  editor = lvim
  pager = delta
  excludesfile = /Users/ivanivanov/.gitignore_global
[interactive]
  diffFilter = delta --color-only
[delta]
 navigate = true
[merge]
 conflictstyle = diff3
[push]
  default = simple
[alias]
  fa = fetch -a
  b = branch --column
  ba = branch -a
  a = add
  pf = push --force-with-lease
  # mistyped add as dad, print dad joke
  dad = !curl https://icanhazdadjoke.com && git add
  s = status
  c = commit
  cm = commit -m
  cmnv = commit -m --no-verify
  cam = !sh -c 'git commit --amend --date=\"$(date -R)\"' -
  co = checkout
  com = checkout master
  cob = checkout -b
  bd = branch -D
  unstage = reset HEAD --
  undo = reset --soft HEAD^
  p = pull
  pos = push --set-upstream origin
  last = log -1 HEAD
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lf = log --stat --graph --pretty=oneline --abbrev-commit --date=relative
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  this-week = log --stat --since='7 Days Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  lo = log --pretty=oneline
  # diff
  d = diff
  dm = diff master
  dp = diff --patience
  dc = diff --cached
  dk = diff --check
  dn = diff --name-only
  rpo = remote prune origin
  pr = pull-request
  rmg = remove-merged 
  # next 2 are taken from rado stankov
  remove-merged = !git branch --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1 }' | xargs -r git branch -D
  sync = !git switch `git remote show origin | sed -n '/HEAD branch/s/.*: //p'` && git pull --prune && git delete-merged
[commit]
	gpgsign = true
[web]
  browser = firefox
[rerere]
  enabled = 1
  autoupdate = 1
[diff]
  colorMoved = default
[color]
  ui = auto
[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold
[help]
  autocorrect = 1
[gpg]
	program = gpg
[branch]
	sort = -committerdate
[maintenance]
	repo = /Users/ivanivanov/work/sanbase2
